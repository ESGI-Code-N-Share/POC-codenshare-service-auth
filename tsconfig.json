{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "ES5",
      "ES6",
      "dom"
    ],
    "target": "ES6",
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "tests"
  ]
}